<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Editar Antecedentes</h3>
        </div>
        <div class="card-body">
            <form action="/forms/edit-antecedent/{{ejAntecedente._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="ancedentegeneral" class="form-control" placeholder="Antecedente General" value="{{ejAntecedente.antecedentes}}" required>
                </div>
                <div class="form-group">
                    <textarea name="antecedentespaciente" class="form-control" required>{{ejAntecedente.antecedentespaciente}}</textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit"> Guardar</button>
                </div>

            </form>

        </div>

    </div>

</div>