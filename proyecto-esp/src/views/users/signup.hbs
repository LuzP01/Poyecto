<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header" >
                Register
            </div>
            <div class="card-body">
                <form action="/users/signup" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" name="nombre" placeholder="Nombre" value="{{nombre}}">
                    </div> 
                     <div class="form-group">
                        <input type="email" class="form-control" name="email" placeholder="Correo Electronico" value="{{email}}">
                    </div> 
                    <div class="form-group">
                        <input type="number" class="form-control" name="numero" placeholder="Telefono movil" value="{{numero}}">
                    </div> 
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="Password" value="{{password}}">
                    </div> 
                    <div class="form-group">
                        <input type="password" class="form-control" name="confirm_password" placeholder="Password" value="{{confirm_password}}">
                    </div> 
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn block">Registrarte</button>

                    </div>

                </form>
            </div>

        </div>
    </div>

</div>